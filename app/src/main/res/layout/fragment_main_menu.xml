<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.MainMenuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/settingButton"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/very_easy_game_button"
            style="@style/MainMenuButtons"
            android:text="@string/buttonVeryEasy_text" />

        <Button
            android:id="@+id/easy_game_button"
            style="@style/MainMenuButtons"
            android:text="@string/buttonEasy_text" />

        <Button
            android:id="@+id/normal_game_button"
            style="@style/MainMenuButtons"
            android:text="@string/buttonNormal_text" />

        <Button
            android:id="@+id/hard_game_button"
            style="@style/MainMenuButtons"
            android:text="@string/buttonHard_text" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/settingButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="@dimen/marginNormal"
        android:layout_marginBottom="@dimen/marginNormal"
        android:src="@drawable/settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:textSize="@dimen/H3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/VERSION"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>